
<h1>IdeaBox</h1>
<form action='/' method='POST'>
  <p>
  Your Idea:
  </p>
  Title:<input type='text' name='idea[title]'/><br/>
  Tags:<input type='text' name='idea[tags]'><br/>
  Description:<br/>
  <textarea name='idea[description]'></textarea><br/>
  <input type='submit'/>
</form>
<h3>Existing Ideas</h3>

<ul>
  <% ideas.each do |idea| %>
    <li>
      <form action='/<%= idea.id %>/like' method='POST' style="display: inline">
        <input type='submit' value="+"/>
      </form>
      Title: <%= idea.title %><br/>
      Tags: <%= idea.tags %><br/>
      Description: <%= idea.description %><br/>
      <a href="/<%= idea.id %>/edit">Edit</a>
      <form action='/<%= idea.id %>' method='POST'>
        <input type="hidden" name="_method" value="DELETE">
        <input type='submit' value="delete"/>
      </form>
    </li>
  <% end %>
</ul>
